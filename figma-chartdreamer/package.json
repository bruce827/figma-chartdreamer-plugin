{
  "dependencies": {
    "@create-figma-plugin/ui": "^4.0.1",
    "@create-figma-plugin/utilities": "^4.0.1",
    "d3-array": "^3.2.4",
    "d3-sankey": "^0.12.3",
    "d3-shape": "^3.2.0",
    "preact": ">=10",
    "prismjs": "1.29.0",
